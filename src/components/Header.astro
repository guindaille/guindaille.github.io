---
import HeaderLink from './HeaderLink.astro';
import { NAV_ITEMS, SITE } from '$/config';
import { toTitleCase } from '$/utils';
---

<header>
	<h2>
		<HeaderLink href="/" class="unstyled">{toTitleCase(SITE.title)}</HeaderLink>
	</h2>
	<nav>
		{Object.values(NAV_ITEMS).map(item => {
			return <HeaderLink href={item.path}>{toTitleCase(item.title)}</HeaderLink>;
		})}
	</nav>
</header>
<style>
	header {
		margin: 0em 0 2em;
	}
	h2 {
		margin: 0.5em 0;
	}
</style>
