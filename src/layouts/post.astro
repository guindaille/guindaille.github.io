---
import BaseLayout from "./base.astro";

export interface Props {
	content: {
		title: string;
		description: string;
		created?: string;
		updated?: string;
		heroImage?: string;
	};
}

const {
	content: { title, description, created, updated, heroImage },
} = Astro.props;
---
<BaseLayout content={{title, description}}>
  <article>
    {heroImage && <img width={720} height={360} src={heroImage} alt="" />}
    <h1 class="title">{title}</h1>
    {created && <time>{created}</time>}
    {updated && (
      <div>
        Last updated on <time>{updated}</time>
      </div>
    )}
    <hr />
    <slot />
  </article>
</BaseLayout>
